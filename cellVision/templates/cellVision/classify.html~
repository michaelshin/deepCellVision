<script type="text/javascript">
    function toggle(source) {
      var checkboxes = document.getElementsByName('options');
      for(var i=0, n=checkboxes.length;i<n;i++) {
        checkboxes[i].checked = source.checked;
      }
    };
    
  
    function setUpSample1(){
    // fill out form    
    var inputs = document.getElementsByTagName('input');

    for(var i = 0; i < inputs.length; i++) {
        if(i == 10 || i == 8 || i == 11 || i == 13 || i == 9) {
          inputs[i].checked = true;
         }
    }
      document.getElementById("id_frames").setAttribute("value", 4);
      document.getElementById("id_channels").setAttribute("value", 2);
      document.getElementById("id_target").setAttribute("value", 1);
    };

    function setUpSample2(){
    // fill out form    
    var inputs = document.getElementsByTagName('input');

    for(var i = 0; i < inputs.length; i++) {
        if(i == 7 || i == 8 || i == 0 || i == 13 || i == 12) {
          inputs[i].checked = true;
         }
    }
      document.getElementById("id_frames").setAttribute("value", 4);
      document.getElementById("id_channels").setAttribute("value", 2);
      document.getElementById("id_target").setAttribute("value", 1);
    };

    function setUpSample3(){
    // fill out form    
    var inputs = document.getElementsByTagName('input');

    for(var i = 0; i < inputs.length; i++) {
        if(i == 5 || i == 4 || i == 12 || i == 13 || i == 14) {
          inputs[i].checked = true;
         }
    }
      document.getElementById("id_frames").setAttribute("value", 4);
      document.getElementById("id_channels").setAttribute("value", 2);
      document.getElementById("id_target").setAttribute("value", 1);
    };
</script>
